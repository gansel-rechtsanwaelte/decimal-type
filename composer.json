{
    "name": "gansel-rechtsanwaelte/decimal-type",
    "description": "Decimal numbers and calculation",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Gansel\\Decimal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gansel\\Decimal\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "doctrine/dbal": "^2.5",
	"phpunit/phpunit" : "^6.0",
        "symfony/framework-bundle": "^3.3",
        "symfony/serializer": "^3.3"
    },
    "suggest": {
        "doctrine/dbal": "A database mapping type is provided",
        "symfony/framework-bundle": "An integration bundle is provided",
        "symfony/serializer": "A normalizer is provided"
    },
    "config": {
        "sort-packages": true
    }
}
